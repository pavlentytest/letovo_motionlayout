<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="5000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/button"
               motion:framePosition="100"
               android:rotation="180" />
           <KeyPosition
               motion:motionTarget="@+id/button"
               motion:framePosition="15"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.153"
               motion:percentY="0.715" />
           <KeyPosition
               motion:motionTarget="@+id/button"
               motion:framePosition="61"
               motion:keyPositionType="parentRelative"
               motion:percentX="0.78"
               motion:percentY="0.461" />
       </KeyFrameSet>
        <OnClick motion:targetId="@id/button" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="16dp"
            android:layout_width="wrap_content"
            android:id="@+id/button"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#ff0000" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="40dp" >
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#00ff00" />
        </Constraint>
    </ConstraintSet>
</MotionScene>